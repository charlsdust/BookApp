@page
@model BookApp.Pages.Genres.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre.GenreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.GenreName)
        </dd>
        @foreach (var item in Model.Genre.books)
        {

            <dd class="col-sm-10">
                <a asp-page="/Books/Details" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem => item.Title)</a>
                <a asp-page="/Authors/Details" asp-route-id="@item.Author.ID"> @Html.DisplayFor(modelItem => item.Author.LastName)</a>
            </dd>
            

        }
     
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Genre.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
