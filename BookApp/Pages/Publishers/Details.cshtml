@model BookApp.Pages.Publishers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Publisher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher.PublisherName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.PublisherName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher.Books):
        </dt>
        <dd class="col-sm-10"></dd>
        @foreach (var item in Model.Publisher.Books)
        {

            <dd class="col-sm-10">
                &#8226<a asp-page="/Books/Details" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem => item.Title)</a>
            </dd>

        }
        <dt class="col-sm-2"></dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Authors)
        </dt>
        <dd class="col-sm-10"></dd>
        @foreach (var item in Model.Authors)
        {

            <dd class="col-sm-10">
                &#8226<a asp-page="/Authors/Details" asp-route-id="@item.ID">  @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</a>

            </dd>


        }

        <dt class="col-sm-2"></dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genres):
        </dt>
        <dd class="col-sm-10"></dd>
        @foreach (var item in Model.Genres)
        {

            <dd class="col-sm-10">
                &#8226<a asp-page="/Genres/Details" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem => item.GenreName)</a>
            </dd>
        }
        <dt class="col-sm-2"></dt>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Publisher.ID">Edit</a> |
